#include <stdio.h>
#include <math.h>

int main() 
{
    float D, area_quadrato, area_cerchio, area_tri;
    printf("Inserisci il valore del diametro D: ");
    scanf("%f", &D);
    
    area_quadrato = pow(D, 2);
    printf("L'area del quadrato di lato %.2f è %.2f\n", D, area_quadrato);
    
    area_cerchio = M_PI * pow(D/2, 2);
    printf("L'area del cerchio di diametro %.2f è %.2f\n", D, area_cerchio);
    
    area_tri = pow(D, 2) * sqrt(3) / 4;
    printf("L'area del triangolo equilatero di lato %.2f è %.2f\n", D, area_tri);
    
    return 0;
}
